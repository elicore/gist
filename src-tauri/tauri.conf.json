{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "gist-manager",
  "version": "0.1.0",
  "identifier": "com.gistmanager.app",
  "build": {
    "devUrl": "http://localhost:1420",
    "frontendDist": "../.svelte-kit/output/client"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Gist Manager",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
